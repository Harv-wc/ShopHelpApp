@model ItemsViewModel
@{
    ViewData["Title"] = "Store Items";
}

    <div class="row justify-content-center">
        
        <div class="col-md-2">
            
            @foreach (var item in @Model.ItemTypes)//items are categories. key is categoryid.
            {
                <a class="btn btn-outline-primary btn-block" asp-controller="Home" asp-action="StoreItems" asp-route-id="@item.Key">
                    @item.Value
                </a>
            }
        </div>

        <div class="col-md-5 card border-light">
            <div class="row">
                @foreach (var item in ViewBag.Table)
                {
                    @Html.Partial("Items", ((Itemcost)item))
                    
                }
            </div>
        </div>

        <div class="col-md-3 card border-dark shadow">
            <div class="card-body">
                List
            </div>
        </div>
        
    </div>

